{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/_out/${presetName}",
            "installDir": "${sourceDir}/_out/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
      {
        "name": "Windows_base",
        "hidden": true,
        "inherits": "base",
        "binaryDir": "${sourceDir}/_out/${presetName}",
        "installDir": "${sourceDir}/_out/${presetName}",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "cl.exe",
          "CMAKE_CXX_COMPILER": "cl.exe"
        },
        "architecture": {
          "value": "x64",
          "strategy": "external"
        },
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        }
      },
        {
            "name": "Linux_base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "Windows_debug",
            "displayName": "Windows_debug",
            "inherits": "Windows_base"
        },
        {
            "name": "Windows_release",
            "displayName": "Windows_release",
            "inherits": "Windows_base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Linux_debug",
            "displayName": "Linux_debug",
            "inherits": "Linux_base"
        },
        {
            "name": "Linux_release",
            "displayName": "Linux_release",
            "inherits": "Linux_base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}